<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/activity_customer_order_detail_iv_btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_arrow_back_48px" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/activity_customer_order_detail_iv_btn_back"
                android:text="Chi tiết đơn hàng"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/activity_customer_order_detail_cl_shipping_info2"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/background_color"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_customer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/activity_customer_order_detail_cl_shipping_info2">
            <TextView
                android:id="@+id/activity_customer_order_detail_tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn hàng"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:ignore="NotSibling" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/activity_customer_order_detail_appCompatImageButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="30dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_phone"
                app:layout_constraintEnd_toStartOf="@+id/activity_customer_order_detail_appCompatImageButton2"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:ignore="NotSibling" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/activity_customer_order_detail_appCompatImageButton2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="30dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_print_48px"
                app:layout_constraintEnd_toStartOf="@+id/activity_customer_order_detail_appCompatImageButton3"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:ignore="NotSibling" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/activity_customer_order_detail_appCompatImageButton3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_sms_48px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:ignore="NotSibling" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_customer_order_detail_cl_shipping_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/cl_customer_info">

            <TextView
                android:id="@+id/activity_customer_order_detail_textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Lấy đơn trong 30 phút (15:30)"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/activity_customer_order_detail_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Cách 3.5km"

                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_customer_order_detail_textView14" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_customer_order_detail_rcvOrder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/activity_customer_order_detail_cl_shipping_info" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_customer_order_detail_constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/activity_customer_order_detail_qnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="15dp"
                android:paddingTop="13dp"
                android:text="3 Món"
                android:textSize="16dp"
                app:layout_constraintBottom_toTopOf="@+id/activity_customer_order_detail_btn_accept"
                app:layout_constraintStart_toStartOf="@+id/activity_customer_order_detail_constraintLayout2" />

            <TextView
                android:id="@+id/activity_customer_order_detail_tv_93"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:paddingTop="13dp"
                android:text="THÀNH TIỀN: "
                android:textSize="16dp"
                app:layout_constraintBottom_toTopOf="@+id/activity_customer_order_detail_btn_accept"
                app:layout_constraintEnd_toStartOf="@+id/activity_customer_order_detail_tv_total" />

            <TextView
                android:id="@+id/activity_customer_order_detail_tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:paddingTop="10dp"
                android:textColor="@color/primary_dark"
                android:textStyle="bold"
                android:text="857.858 đ"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/activity_customer_order_detail_btn_accept"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="UnknownId" />

            <android.widget.Button
                android:id="@+id/activity_customer_order_detail_btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:background="@drawable/btn_cancel"
                android:text="Hủy đơn hàng"
                android:textAllCaps="false"
                android:textColor="@color/primary_color"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_customer_order_detail_tv_total" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>